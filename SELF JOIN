CREATE DATABASE COMPANY;
USE COMPANY;

CREATE TABLE EMPLOYEE(
ID INT PRIMARY KEY,
NAME VARCHAR(20),
MANAGER_ID INT
);

INSERT INTO EMPLOYEE (ID, NAME, MANAGER_ID) VALUES
(101, 'PRANAV', 103),
(102, 'KISHAN', 103),
(103, 'AMOGH' , NULL),
(104, 'KUSHAL', 101);

SELECT A.NAME AS MANAGER_NAME, B.NAME
FROM EMPLOYEE AS a
JOIN EMPLOYEE AS B
ON A.ID=B.MANAGER_ID; /*SELF JOIN*/

SELECT NAME FROM EMPLOYEE
UNION
SELECT NAME FROM EMPLOYEE;/*UNION*/
